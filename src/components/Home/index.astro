---
import Avatar from "@components/Avatar"
import githubPC from "@assets/github-pc.png"
import githubMobile from "@assets/github-mobile.png"
import youtubePC from "@assets/youtube-pc.png"
import youtubeMobile from "@assets/youtube-mobile.png"
import Container from "@layout/Container.astro"

const { blok } = Astro.props
---

<Container title="Trung's home">
  <section class="flex flex-col items-center justify-around md:flex-row">
    <Avatar />
    <h1
      class="default-text whitespace-nowrap text-center text-lg font-normal md:text-xl lg:text-2xl"
    >
      <span>{blok.hello_text_1}</span>
      <span class="hidden md:inline-block">-</span>
      <br class="inline-block md:hidden" />
      {blok.hello_text_2}
      <span class="relative inline-flex overflow-y-clip text-left">
        <span class="select-none text-transparent" aria-hidden="true"
          >{blok.title_text_1}</span
        >
        <span
          class="rotating-words absolute top-0 left-0 overflow-x-visible text-accent"
        >
          <span class="block">{blok.title_text_1}</span>
          <span class="block">{blok.title_text_2}</span>
          <span class="block">{blok.title_text_3}</span>
          <span class="block">{blok.title_text_1}</span>
        </span>
      </span>
    </h1>
  </section>
  <section class="mt-4 flex flex-grow-[2] items-center justify-center">
    <h3
      class="default-text flex-grow text-center text-lg md:text-xl lg:text-2xl"
    >
      I like to <a
        class="glowing-text from-red-400 to-blue-500 font-semibold transition-all"
        href="/portfolio">build</a
      > and <a
        class="glowing-text from-blue-500 to-red-400 font-semibold"
        href="/blog">share</a
      > stuff!
    </h3>
  </section>
  <section class="flex flex-grow items-center justify-around">
    <a class="rounded-lg dark:bg-white" href="https://github.com/trungne">
      <picture
        class="aspect-[100/41] w-[100px] rounded-lg md:aspect-[200/82] md:w-[200px]"
      >
        <source srcset={githubPC} media="(min-width: 768px)" />
        <img src={githubMobile} alt="github" />
      </picture>
    </a>
    <a
      class="flex items-center rounded-lg dark:bg-white"
      href="https://www.youtube.com/channel/UCsyzWAjXCFveWqJhfqTf9yA"
    >
      <picture
        class="grid aspect-[100/41] w-[100px] place-content-center px-2 md:aspect-[200/82] md:w-[200px] md:px-4"
      >
        <source srcset={youtubePC} media="(min-width: 768px)" />
        <img src={youtubeMobile} alt="youtube" />
      </picture>
    </a>
  </section>
</Container>

<style>
  @keyframes rotating {
    0% {
      transform: translateY(-75%);
    }

    33% {
      transform: translateY(-50%);
    }

    67% {
      transform: translateY(-25%);
    }

    100% {
      transform: translateY(0);
    }
  }

  .rotating-words {
    animation: rotating 6s ease 0s infinite normal none;
    animation-play-state: running;
  }

  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .glowing-text {
    background-size: 400% 400%;
    animation: gradient 5s ease infinite;
    /* animation-play-state: paused; */
    @apply bg-gradient-to-r bg-clip-text text-transparent;
  }
</style>
